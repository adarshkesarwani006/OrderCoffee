<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base Application theme    -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar"> // Parent theme for App
    <!-- Customize your theme here.   -->
    <!-- App branding color for the app bar.   -->
        <item name="colorPrimary">#795548</item>
    <!-- Darker variant for the status bar and contextual app bars.   -->
        <item name="colorPrimaryDark">#5D4037</item>
    <!-- Theme UI controls like checkbox and text fields.   -->
        <item name="colorAccent">#FF5722</item>


    </style>

    <!-- Style for header TextView    -->
    <style name="HeaderTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="textAllCaps">true</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

</resources>